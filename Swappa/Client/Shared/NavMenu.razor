<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <Icon Name="IconName.Bricks"></Icon> Blue Wall
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link px-3" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <AuthorizeView Roles="SuperAdmin, Admin">
            <Authorized>
               <div class="nav-item px-3">
                   <NavLink class="nav-link px-3" href="admin">
                      <span class="oi oi-lock-locked" aria-hidden="true"></span> Admin. Center
                   </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link px-3" href="messages">
                        <span class="oi oi-lock-locked oi-inbox" aria-hidden="true"></span> Message Center
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <div class="nav-item px-3">
            <NavLink class="nav-link px-3" href="about">
                <span class="oi oi-info" aria-hidden="true"></span> About Us
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link px-3" href="contact">
                <span class="oi oi-chat" aria-hidden="true"></span> Contact Us
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link px-3" href="faq">
                <span class="oi oi-question-mark" aria-hidden="true"></span> FAQ
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
