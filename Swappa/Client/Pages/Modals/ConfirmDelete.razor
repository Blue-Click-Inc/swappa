@page "/modal"

@inject IToastService Toast

<div class="container text-center">
    <div class="row">
        <div class="col">
            <h5>Are you sure you want to delete this record?</h5>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col text-center">
            <button type="button" class="btn btn-danger mr-3" @onclick="(async () => await DeleteAsync())">
                <i class="fa fa-trash pr-2"></i> Yes
            </button>
            <button type="button" class="btn btn-secondary mr-3" @onclick="(async () => await Instance.CancelAsync())">
                <i class="fa fa-times pr-2"></i> Cancel
            </button>
        </div>
    </div>
</div>

@code {
    [CascadingParameter] BlazoredModalInstance Instance { get; set; }
    [Parameter] public int Id { get; set; }

    async Task DeleteAsync()
    {
        // Delete
        var result = false;
        if (result)
        {
            await Instance.CloseAsync();
            Toast.ShowSuccess("Record successfully deleted.");
        }
        else
        {
            Toast.ShowError("Something went wrong. Could not delete record.");
        }
    }
}