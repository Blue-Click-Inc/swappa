<PageTitle>@pageTitle</PageTitle>
<div class="row">
    <div class="box-shadow-inset border-radius-2rem p-3">
        <EditForm Model="RequestModel" method="post" OnValidSubmit="ChangeForgotPasswordAsync" FormName="forgotPassword">
            <DataAnnotationsValidator />
            <h3>
                <span class="fa fa-pencil text-muted fw-bold" aria-hidden="true"> Change Password</span>
            </h3>
            <hr />
            <div class="row">
                <div class="form-floating mb-3 px-1">
                    <InputText 
                        @bind-Value="RequestModel.NewPassword" 
                        class="form-control" 
                        placeholder="Password"
                        aria-required="true"
                        type="password"
                    />
                    <label for="NewPassword" class="form-label">Password</label>
                    <ValidationMessage For="() => RequestModel.NewPassword" class="text-danger" />
                </div>
                <div class="form-floating mb-3 px-1">
                    <InputText 
                        @bind-Value="RequestModel.ConfirmNewPassword" 
                        class="form-control"
                        placeholder="Confirm New Password"
                        aria-required="true"
                        type="password"
                    />
                    <label for="ConfirmNewPassword" class="form-label">Confirm New Password</label>
                    <ValidationMessage For="() => RequestModel.ConfirmNewPassword" class="text-danger" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-0 col-lg-3"></div>
                <div class="col-md-12 col-lg-6 d-flex justify-content-center">
                    <div class="d-flex justify-content-center flex-column flex-md-row w-100">
                        <Button Color="ButtonColor.Primary" Outline="true" Class="mx-1 mt-1" Type="ButtonType.Submit" disabled="@isLoading">
                            <span class="oi oi-save" aria-hidden="true"></span> @buttonLabel
                        </Button>
                        <Button Color="ButtonColor.Secondary" Outline="true" Class="mx-1 mt-1" disabled="@isLoading" @onclick="( async () => await Cancel())">
                            <span class="oi oi-arrow-left" aria-hidden="true"></span> Back
                        </Button>
                    </div>
                </div>
                <div class="col-md-0 col-lg-3"></div>
            </div>
        </EditForm>
    </div>
</div>