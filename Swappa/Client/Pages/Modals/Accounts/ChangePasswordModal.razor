<PageTitle>@pageTitle</PageTitle>
<div class="row">
    <div class="box-shadow-inset border-radius-2rem p-3">
        <EditForm Model="Request" method="post" OnValidSubmit="ChangePasswordAsync" FormName="changepassword">
            <DataAnnotationsValidator />
            <h3>
                <span class="oi oi-lock-locked text-muted fw-bold" aria-hidden="true"> Change Password</span>
            </h3>
            <hr />
            <div class="row">
                <div class="form-floating mb-3 px-1">
                    <InputText 
                        @bind-Value="Request.CurrentPassword" 
                        class="form-control" 
                        placeholder="Current Password"
                        aria-required="true"
                        type="password"
                    />
                    <label for="CurrentPassword" class="form-label">Current Password</label>
                    <ValidationMessage For="() => Request.CurrentPassword" class="text-danger" />
                </div>
                <div class="form-floating mb-3 px-1">
                    <InputText 
                        @bind-Value="Request.NewPassword" 
                        class="form-control"
                        placeholder="New Password"
                        aria-required="true"
                        type="password"
                    />
                    <label for="NewPassword" class="form-label">New Password</label>
                    <ValidationMessage For="() => Request.NewPassword" class="text-danger" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-0 col-lg-3"></div>
                <div class="col-md-12 col-lg-6 d-flex justify-content-center">
                    <div class="d-flex justify-content-center flex-column flex-md-row w-100">
                        <Button Color="ButtonColor.Primary" Outline="true" Class="mx-1 mt-1" Type="ButtonType.Submit" disabled="@isLoading">
                            <span class="oi oi-check" aria-hidden="true"></span> @buttonLabel
                        </Button>
                        <Button Color="ButtonColor.Secondary" Outline="true" Class="mx-1 mt-1" disabled="@isLoading" @onclick="( async () => await SharedService.CancelModalAsync(Instance))">
                            <span class="oi oi-arrow-left" aria-hidden="true"></span> Back
                        </Button>
                    </div>
                </div>
                <div class="col-md-0 col-lg-3"></div>
            </div>
        </EditForm>
    </div>
</div>