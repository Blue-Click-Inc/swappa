<PageTitle>@pageTitle</PageTitle>
<div class="row">
    <div class="box-shadow-inset border-radius-2rem p-3">
        <EditForm Model="ResetPasswordModel" method="post" OnValidSubmit="ResetPasswordAsync" FormName="re">
            <DataAnnotationsValidator />
            <h3>
                <span class="oi oi-action-undo text-muted fw-bold" aria-hidden="true"> @pageTitle</span>
            </h3>
            <hr />
            <div class="row">
                <div class="form-floating mb-3 px-1">
                    <InputText 
                        @bind-Value="ResetPasswordModel.Email" 
                        class="form-control" 
                        autocomplete="Email"
                        placeholder="email@example.com"
                        aria-required="true"
                        type="email"
                    />
                    <label for="Email" class="form-label">Email</label>
                    <ValidationMessage For="() => ResetPasswordModel.Email" class="text-danger" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-0 col-lg-3"></div>
                <div class="col-md-12 col-lg-6 d-flex justify-content-center">
                    <div class="d-flex justify-content-center flex-column flex-md-row w-100">
                        <Button Color="ButtonColor.Primary" Outline="true" Class="mx-1 mt-1" Type="ButtonType.Submit" disabled="@isLoading">
                            <span class="oi oi-action-undo" aria-hidden="true"></span> @buttonLabel
                        </Button>
                        <Button Color="ButtonColor.Secondary" Outline="true" Class="mx-1 mt-1" disabled="@isLoading" @onclick="( async () => await GoBack())">
                            <span class="oi oi-arrow-left" aria-hidden="true"></span> Back
                        </Button>
                    </div>
                </div>
                <div class="col-md-0 col-lg-3"></div>
            </div>
            <div class="row py-2">
                <a class="px-1" style="cursor: pointer;" @onclick="(async () => await GoToLogin())">Go to Login?</a>
            </div>
        </EditForm>
    </div>
</div>

