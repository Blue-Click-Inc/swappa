@inject IToastService Toast
@inject IModalService Modal

<PageTitle>Login</PageTitle>
<div class="row">
    <div class="border py-3">
        <EditForm Model="LoginModel" method="post" OnValidSubmit="LoginAsync" FormName="login">
            <DataAnnotationsValidator />
            <h3>
                <span class="oi oi-account-login pointer" aria-hidden="true"></span> Login
            </h3>
            <hr />
            <div class="row">
                <div class="form-floating mb-3 px-1">
                    <InputText 
                        @bind-Value="LoginModel.Email" 
                        class="form-control" 
                        autocomplete="Email"
                        placeholder="example@email.com"
                        aria-required="true"
                        type="email"
                    />
                    <label for="Email" class="form-label">Email</label>
                    <ValidationMessage For="() => LoginModel.Email" class="text-danger" />
                </div>
                <div class="form-floating mb-3 px-1">
                    <InputText 
                        @bind-Value="LoginModel.Password" 
                        class="form-control" 
                        autocomplete="Password"
                        placeholder="Password"
                        aria-required="true"
                        type="password"
                    />
                    <label for="Password" class="form-label">Password</label>
                    <ValidationMessage For="() => LoginModel.Password" class="text-danger" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-0 col-lg-3"></div>
                <div class="col-md-12 col-lg-6 d-flex justify-content-center">
                    <div class="d-flex justify-content-center flex-column flex-md-row w-100">
                        <button class="btn btn-primary mx-1 mt-1" disabled="@isLoading">
                            <span class="oi oi-account-login" aria-hidden="true"></span> @buttonLabel
                        </button>
                        <button type="button" class="btn btn-secondary mx-1 mt-1" disabled="@isLoading" @onclick="( async () => await GoBack())">
                            <span class="oi oi-arrow-left" aria-hidden="true"></span> Back
                        </button>
                    </div>
                </div>
                <div class="col-md-0 col-lg-3"></div>
            </div>
            <div class="row mt-2">
                <a class="px-1" style="cursor: pointer;" @onclick="(async () => await GoToRegister())">Have no account?</a>
                <a class="px-1 mt-1 text-danger" style="cursor: pointer;" @onclick="(async () => await GoToForgotPassword())">Forgot password?</a>
            </div>
        </EditForm>
    </div>
</div>

