<div class="col-12 col-md-6 col-lg-4">
    <div class="card box-shadow-inset">
        <a href="/vehicle/@Vehicle.Id" class="text-decoration-none">
            <img src="@Vehicle.Images.OrderByDescending(v => v.IsMain).FirstOrDefault()?.Url" alt="@Vehicle.Make @Vehicle.Model" class="card-img-top" />
            <div class="card-body">
                <p class="card-title text-muted fw-bold text-center">@Vehicle.Make @Vehicle.Model @Vehicle.Year</p>
                <span class="d-flex flex-row justify-content-around">
                    <span class="card-text oi oi-image mx-0 px-0">
                        <span class="px-1">@Vehicle.Images.Count</span>
                    </span>
                    <span class="card-text oi oi-heart mx-0 px-0">
                        <span class="px-1">@Vehicle.Favorited.ToShortNumString()</span>
                    </span>
                    <span class="card-text oi oi-eye" aria-hidden="true">
                        <span class="px-1">@Vehicle.Views</span>
                    </span>
                </span>
            </div>
        </a>
    </div>
</div>