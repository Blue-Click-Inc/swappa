<EditForm Model="Message" method="post" OnValidSubmit="SendAsync" FormName="message">
    <DataAnnotationsValidator />
    <div class="box-shadow-inset border-radius-2rem w-100 p-3">
        <h3>
            <span class="oi oi-chat text-muted fw-bold" aria-hidden="true"> Let's hear from you.</span>
        </h3>
        <hr />
        <div class="row">
            <div class="form-floating mb-3 px-1">
                <InputText @bind-Value="Message.FullName"
                           class="form-control"
                           autocomplete="FullName"
                           placeholder="John Doe"
                           aria-required="true"
                           type="text" />
                <label for="FullName" class="form-label">Full Name</label>
                <ValidationMessage For="() => Message.FullName" class="text-danger" />
            </div>
            <div class="form-floating mb-3 px-1">
                <InputText @bind-Value="Message.EmailAddress"
                           class="form-control"
                           autocomplete="EmailAddress"
                           placeholder="email@example.com"
                           aria-required="true"
                           type="email" />
                <label for="EmailAddress" class="form-label">Email Address</label>
                <ValidationMessage For="() => Message.EmailAddress" class="text-danger" />
            </div>
            <div class="form-floating mb-3 px-1">
                <InputText @bind-Value="Message.PhoneNumber"
                           class="form-control"
                           autocomplete="PhoneNumber"
                           placeholder="+2348012345678"
                           aria-required="false"
                           type="phone" />
                <label for="PhoneNumber" class="form-label">Contact Phone</label>
                <ValidationMessage For="() => Message.PhoneNumber" class="text-danger" />
            </div>
            <div class="form-floating mb-3 px-1">
                <InputTextArea @bind-Value="Message.Message"
                               class="form-control h-100"
                               rows="7"
                               placeholder="Let's hear from you'"
                               aria-required="true"></InputTextArea>
                <label for="Feedback" class="form-label">Enter your message</label>
                <ValidationMessage For="() => Message.Message" class="text-danger" />
            </div>
        </div>
        <div class="row mt-1">
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary mt-1 w-50" disabled="@false">
                    <span class="fa fa-paper-plane" aria-hidden="true"></span> Send
                </button>
            </div>
        </div>
    </div>
</EditForm>